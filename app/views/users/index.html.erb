<h2>Users</h2>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/list', user: @user %>
      <%= render 'books/list2', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <table>
      <tr>
        <th>image</th>
        <th>name</th>
        <th>link</th>
      </tr>
      <tr>
        <% @users.each do |user| %>
        <td><%= image_tag book.user.get_profile_image(100, 100) %></td>
        <td><%= user.name %></td>
        <td><%= link_to "show", user_path(user.id) %></td>
        <% end %>
      </tr>
      </table>
    </div>
  </div>
</div>