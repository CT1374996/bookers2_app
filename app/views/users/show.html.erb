<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag @user.get_profile_image(100, 100) %>
      <table>
      <tr>
      <th>name</th>
      <th><%= @user.name %></th>
      </tr>
      <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
      </tr>
      </table>
      <div class="row">
        <%= link_to edit_user_path(@user.id) do %>
        <i class="fas fa-user-cog"></i>
        <% end %>
      </div>

    <h2>New Book</h2>
    <%= form_with model: @book do |f| %>
    <h5>Title</h5>
    <%= f.text_field :title %>
    <h5>Body</h5>
    <%= f.text_area :body %>
    <%= f.submit 'Create book' %>
    <% end %>
    </div>

<div class="col-md-8 offset-md-1">
  <h2>Books</h2>
<table>
  <tr>
    <th>Title</th>
    <th>Opinion</th>
    <th colspan="2"></th>
  </tr>
  <tr>
    <% @books.each do |book| %>
    <td><%= @book.title %></td>
    <td><%= @book.body %></td>
    <% end %>
  </tr>
</table>
</div>
</div>
</div>