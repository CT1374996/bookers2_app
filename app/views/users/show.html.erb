<h5>User info</h5>
<%= image_tag @user.get_profile_image(100, 100) %>
<table>
  <tr>
    <th>name</th>
    <th><%= @user.name %></th>
  </tr>
  <tr>
    <th>introduction</th>
    <th><%= @user.introduction %></th>
  </tr>
</table>

<h2>New Book</h2>
<%= form_with model: @book do |f| %>
<h5>Title</h5>
<%= f.text_field :title %>
<h5>Body</h5>
<%= f.text_area :body %>
<%= f.submit 'Create book' %>
<% end %>