<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/list', user: @user %>
      <%= render 'books/list2', book: @book %>
    </div>
<div class="col-md-8 offset-md-1">
  <h2>Books</h2>
<table>
  <tr>
    <th>Title</th>
    <th>Opinion</th>
    <th colspan="2"></th>
  </tr>
  <tr>
    <% @books.each do |book| %>
    <td><%= @book.title %></td>
    <td><%= @book.body %></td>
    <% end %>
  </tr>
</table>
</div>
</div>
</div>