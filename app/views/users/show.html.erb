<h4>User info</h4>
<%= image_tag @user.get_profile_image(100, 100) %>
<table>
  <tr>
    <th>name</th>
    <th><%= @user.name %></th>
  </tr>
  <tr>
    <th>introduction</th>
    <th><%= @user.introduction %></th>
  </tr>
</table>

<h4>New Book</h4>
<%= form_with model: @book do |f| %>
<h5>Title</h5>
<%= f.text_field :title %>
<h5>Body</h5>
<%= f.text_area :body %>
<%= f.submit 'Create book' %>
<% end %>

<h4>Books</h4>
<table>
  <tr>
    <th>Title</th>
    <th>Opinion</th>
    <th colspan="2"></th>
  </tr>
  <tr>
    <% @books.each do |book| %>
    <td><%= @book.title %></td>
    <td><%= @book.body %></td>
    <% end %>
  </tr>
</table>