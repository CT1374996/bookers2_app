<div class="container">
  <div class="row">
    <div class="col">
      <h1>Editing Book</h1>
      <%= form_with model: @book do |f| %>
      <h6>Title</h6>
      <%= f.text_field :title %>
      <h6>Body</h6>
      <%= f.text_area :body %>
      <%= f.submit 'Update book' %>
      <% end %>
      <%= link_to "Show", book_path(@book.id) %>
      <%= link_to "Back", books_path %>
    </div>
  </div>
</div>