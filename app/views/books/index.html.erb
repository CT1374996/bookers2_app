<h2>Books</h2>
<table>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
  <%= @books.each do |book| %>
  <tr>
    <td><%= image_tag profile_image.get_image %></td>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
  </tr>
  <% end %>
</table>

<h2>New Book</h2>
<%= form_with model: @book do |f| %>
<h5>Title</h5>
<%= f.text_field :title %>
<h5>Body</h5>
<%= f.text_area :body %>
<%= f.submit 'Create book' %>
<% end %>