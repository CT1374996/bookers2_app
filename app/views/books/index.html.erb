<h2>Books</h2>
<table>
  <tr>
    <th>image</th>
    <th>Title</th>
    <th>opinion</th>
  </tr>
  <% @books.each do |book| %>
  <tr>
    <td><%= image_tag @user.get_profile_image(100, 100) %></td>
    <%= link_to book_path(book.id) do %>
    <td><%= book.title %></td>
    <% end %>
    <td><%= book.body %></td>
  </tr>
  <% end %>
</table>