<h2>Books</h2>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'list', user: @user %>
      <%= render 'list2', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <table>
      <tr>
        <th>image</th>
        <th>Title</th>
        <th>opinion</th>
      </tr>
        <% @books.each do |book| %>
        <tr>
          <td><%= image_tag book.user.get_profile_image(100, 100) %></td>
          <%= link_to book_path(book.id) do %>
          <td><%= book.title %></td>
          <% end %>
          <td><%= book.body %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>