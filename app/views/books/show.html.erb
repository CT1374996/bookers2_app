<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'list', user: @user %>
      <%= render 'list2', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h3>Book detail</h3>
        <table>
          <tr>
            <td><%= image_tag user.get_profile_image(100, 100) %><br><%= @user.name %></td>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <% if @book.user == current_user %>
            <td><%= link_to "edit", edit_book_path %></td>
            <td><%= link_to "destroy", book_path(@book), method: :delete %></td>
            <% end %>
          </tr>
        </table>
    </div>
  </div>
</div>