<div><%= flash[:notice] %></div>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'list', user: @user %>
      <%= render 'list2', book: @book_new %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
        <table class="table">
          <tr>
            <td><%= link_to user_path(@user.id) do %><%= image_tag @user.get_profile_image(60, 60) %><% end %><br><%= link_to @user.name, user_path(@user.id) %></td>
            <td><%= @book.title %></td>
            <td><%= @book.body %></td>
            <% if @book.user == current_user %>
            <td><%= link_to "edit", edit_book_path(@book.id), class:"btn btn-secondary" %></td>
            <td><%= link_to "destroy", book_path(@book.id), class:"btn btn-secondary", method: :delete, "data-confirm" => "本当に消しますか？" %></td>
            <% end %>
          </tr>
        </table>
    </div>
  </div>
</div>