<h2>New book</h2>
<% if book.errors.any? %>
<%= book.errors.count %> errors prohibited this book from being saved:
<ul>
  <% book.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
</ul>
<% end %>
<%= form_with model: book, url: books_path, method: :post do |f| %>
<h5>Title</h5>
<%= f.text_field :title %>
<h5>Body</h5>
<%= f.text_area :body %>
<%= f.submit 'Create book', class:"btn btn-secondary" %>
<% end %>